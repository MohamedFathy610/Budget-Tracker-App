<resources>

    <!-- Header 1 -->
    <style name="Text.H1" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <!-- Header 2 -->
    <style name="Text.H2" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Header 3 -->
    <style name="Text.H3" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Button text -->
    <style name="Text.Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Body large -->
    <style name="Text.BodyLarge" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Body medium -->
    <style name="Text.BodyMedium" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
