<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.budgettracker.MainActivity">

    <!-- Fragment Container -->

    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- FAB 1 -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_priorities"
                android:visibility="invisible"
                android:elevation="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/blue"
                app:layout_constraintBottom_toTopOf="@id/fab_main"
                app:layout_constraintEnd_toEndOf="@id/fab_main"
                app:srcCompat="@drawable/priorities_ic"
                app:tint="@color/white" />

            <!-- FAB 2 -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_withdraw"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/blue"
                app:layout_constraintBottom_toTopOf="@id/fab_priorities"
                app:layout_constraintEnd_toEndOf="@id/fab_priorities"
                app:srcCompat="@drawable/withdraw_ic"
                app:tint="@color/white" />

            <!-- FAB 3 -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_add_money"
                android:visibility="invisible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/blue"
                app:layout_constraintBottom_toTopOf="@id/fab_withdraw"
                app:layout_constraintEnd_toEndOf="@id/fab_withdraw"
                app:srcCompat="@drawable/add_money_ic"
                app:tint="@color/white" />

            <!-- MAIN FAB (origin button) -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:clickable="true"
                android:focusable="true"
                app:backgroundTint="@color/dark_blue"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/add_ic"
                app:tint="@color/white" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:itemIconTint="@color/dark_blue"
        app:itemTextColor="@color/dark_blue"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>
